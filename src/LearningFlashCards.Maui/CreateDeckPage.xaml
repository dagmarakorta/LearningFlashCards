<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningFlashCards.Maui.CreateDeckPage"
             Title="Create Deck">

    <ScrollView>
        <VerticalStackLayout
            Padding="{StaticResource PagePadding}"
            Spacing="{StaticResource PageRowSpacing}">
            <Label
                Text="Create Deck"
                Style="{StaticResource PageTitle}"
                SemanticProperties.HeadingLevel="Level1" />

            <VerticalStackLayout Spacing="6">
                <Label Text="Name" />
                <Entry
                    x:Name="NameEntry"
                    Placeholder="Example: Biology Terms" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="6">
                <Label Text="Description" />
                <Editor
                    x:Name="DescriptionEditor"
                    Placeholder="Short description for this deck"
                    AutoSize="TextChanges"
                    MinimumHeightRequest="90" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="6">
                <Label Text="Study settings" Style="{StaticResource SubHeadline}" />
                <Label Text="Daily review limit" />
                <Entry
                    x:Name="DailyLimitEntry"
                    Keyboard="Numeric" />
                <Label Text="Easy minimum interval (days)" />
                <Entry
                    x:Name="EasyMinIntervalEntry"
                    Keyboard="Numeric" />
                <Label Text="Max interval (days)" />
                <Entry
                    x:Name="MaxIntervalEntry"
                    Keyboard="Numeric" />
                <HorizontalStackLayout Spacing="12">
                    <Label Text="Repeat Again/Hard in session" VerticalOptions="Center" />
                    <Switch x:Name="RepeatInSessionSwitch" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Button
                    Text="Save"
                    Style="{StaticResource PrimaryButton}"
                    Clicked="OnSaveClicked" />
                <Button
                    Text="Cancel"
                    Clicked="OnCancelClicked" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
