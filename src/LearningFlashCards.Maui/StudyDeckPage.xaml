<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningFlashCards.Maui.StudyDeckPage"
             Title="Study">

    <Grid
        Padding="{StaticResource PagePadding}"
        RowDefinitions="Auto,*,Auto"
        RowSpacing="{StaticResource PageRowSpacing}">
        <Label
            Text="{Binding DeckName}"
            Style="{StaticResource PageTitle}"
            SemanticProperties.HeadingLevel="Level1" />

        <Border Grid.Row="1" Style="{StaticResource DeckCard}">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnFlipTapped" />
            </Border.GestureRecognizers>
            <Grid RowDefinitions="*,Auto">
                <Label
                    Text="{Binding CurrentSideText}"
                    Style="{StaticResource DeckTitle}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                    LineBreakMode="WordWrap" />
                <Label
                    Grid.Row="1"
                    Text="Tap to flip"
                    TextColor="{StaticResource Gray500}"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HasCards}" />
            </Grid>
        </Border>

        <Grid Grid.Row="2" RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
            <Label
                Text="{Binding ProgressText}"
                VerticalOptions="Center" />
            <Button
                Grid.Row="1"
                Text="Show answer"
                Style="{StaticResource PrimaryButton}"
                IsVisible="{Binding CanShowAnswer}"
                Clicked="OnShowAnswerClicked" />
            <Grid
                Grid.Row="2"
                ColumnDefinitions="*,*,*,*"
                ColumnSpacing="8"
                IsVisible="{Binding CanRate}">
                <Button
                    Text="Again"
                    Clicked="OnRateAgainClicked" />
                <Button
                    Grid.Column="1"
                    Text="Hard"
                    Clicked="OnRateHardClicked" />
                <Button
                    Grid.Column="2"
                    Text="Medium"
                    Clicked="OnRateMediumClicked" />
                <Button
                    Grid.Column="3"
                    Text="Easy"
                    Clicked="OnRateEasyClicked" />
            </Grid>
        </Grid>
    </Grid>

</ContentPage>
