<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningFlashCards.Maui.MainPage"
             Title="Decks">

    <Grid
        Padding="{StaticResource PagePadding}"
        RowDefinitions="Auto,*"
        RowSpacing="{StaticResource PageRowSpacing}">
        <Grid ColumnDefinitions="*,Auto,Auto"
              ColumnSpacing="8">
            <Label
                Text="Decks"
                Style="{StaticResource PageTitle}"
                SemanticProperties.HeadingLevel="Level1" />
            <Button
                Grid.Column="1"
                Text="New"
                Style="{StaticResource PrimaryButton}"
                SemanticProperties.Hint="Create a new deck"
                Clicked="OnNewDeckClicked" />
            <Button
                Grid.Column="2"
                Text="Profile"
                SemanticProperties.Hint="Manage your profile"
                Clicked="OnProfileClicked" />
        </Grid>

        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding Decks}"
            SelectionMode="Single"
            SelectionChanged="OnDeckSelectionChanged">
            <CollectionView.EmptyView>
                <Label
                    Text="No decks yet. Create your first one."
                    Style="{StaticResource EmptyStateText}" />
            </CollectionView.EmptyView>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="{StaticResource CardSpacing}" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource DeckCard}">
                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Name}" Style="{StaticResource DeckTitle}" />
                                <Label Text="{Binding Summary}" Style="{StaticResource DeckMeta}" />
                            </VerticalStackLayout>
                            <Button
                                Grid.Column="1"
                                Text="✏️"
                                FontSize="18"
                                BackgroundColor="Transparent"
                                TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}"
                                Padding="6"
                                MinimumHeightRequest="32"
                                MinimumWidthRequest="32"
                                SemanticProperties.Hint="Edit deck"
                                Clicked="OnEditDeckClicked" />
                            <Button
                                Grid.Column="2"
                                Text="🗑️"
                                FontSize="18"
                                BackgroundColor="Transparent"
                                TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}"
                                Padding="6"
                                MinimumHeightRequest="32"
                                MinimumWidthRequest="32"
                                SemanticProperties.Hint="Delete deck"
                                Clicked="OnDeleteDeckClicked" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
