<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearningFlashCards.Maui.MainPage"
             Title="Decks">

    <Grid
        Padding="{StaticResource PagePadding}"
        RowDefinitions="Auto,*"
        RowSpacing="{StaticResource PageRowSpacing}">
        <Grid ColumnDefinitions="*,Auto">
            <Label
                Text="Decks"
                Style="{StaticResource PageTitle}"
                SemanticProperties.HeadingLevel="Level1" />
            <Button
                Grid.Column="1"
                Text="New"
                Style="{StaticResource PrimaryButton}"
                SemanticProperties.Hint="Create a new deck" />
        </Grid>

        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding Decks}"
            SelectionMode="None">
            <CollectionView.EmptyView>
                <Label
                    Text="No decks yet. Create your first one."
                    Style="{StaticResource EmptyStateText}" />
            </CollectionView.EmptyView>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="{StaticResource CardSpacing}" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource DeckCard}">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Name}" Style="{StaticResource DeckTitle}" />
                            <Label Text="{Binding Summary}" Style="{StaticResource DeckMeta}" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
